<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.weekendhack.concerthyper.AddConcertActivity">

    <EditText
        android:id="@+id/et_manual_artist"
        android:layout_width="282dp"
        android:layout_height="43dp"
        android:hint="Artist"

        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/et_manual_location"
        android:layout_width="282dp"
        android:layout_height="44dp"
        android:hint="Location"
        tools:layout_editor_absoluteY="43dp"
        tools:layout_editor_absoluteX="0dp"
        android:layout_below="@+id/et_manual_artist"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/et_manual_date"
        android:layout_width="283dp"
        android:layout_height="43dp"
        android:hint="DD/MM/YYYY"
        tools:layout_editor_absoluteY="87dp"
        tools:layout_editor_absoluteX="0dp"
        android:layout_below="@+id/et_manual_location"
        android:layout_alignRight="@+id/et_manual_location"
        android:layout_alignEnd="@+id/et_manual_location" />

    <EditText
        android:id="@+id/et_manual_time"
        android:layout_width="282dp"
        android:layout_height="42dp"
        android:hint="HH:MM"
        tools:layout_editor_absoluteY="130dp"
        tools:layout_editor_absoluteX="0dp"
        android:layout_below="@+id/et_manual_date"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/btn_add_concert"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Add concert"
        tools:layout_editor_absoluteY="259dp"
        tools:layout_editor_absoluteX="148dp"
        android:layout_marginTop="166dp"
        android:layout_below="@+id/et_manual_date"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
