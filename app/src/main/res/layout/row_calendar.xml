<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:drawSelectorOnTop="false"
    android:background="@drawable/calendarbackground"
    android:layout_margin="15dp"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView android:id="@+id/cover"
        android:layout_margin="5dp"
        android:padding="5dp"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:background="@drawable/calendarbackground"/>
    <LinearLayout
        android:layout_margin="5dp"
        android:orientation="vertical"
        android:layout_gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView android:id="@+id/re_calendar_artist"
            android:text="Artist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp" />
        <TextView android:id="@+id/te_calendar_location"
            android:text="Location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView android:id="@+id/te_calendar_dateTime"
            android:text="DD/MM/YYYY , HH:MM"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</LinearLayout>
